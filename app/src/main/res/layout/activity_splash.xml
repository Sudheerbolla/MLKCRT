<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_logo_height"
            android:layout_centerInParent="true"
            android:src="@drawable/img_doll_splash" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_5xlarge"
            android:layout_marginTop="@dimen/space_xmedium"
            android:src="@drawable/milkcart_logo" />

    </LinearLayout>

</RelativeLayout>