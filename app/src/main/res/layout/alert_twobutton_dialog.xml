<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginRight="@dimen/space_small"
        android:orientation="vertical">

        <com.godavarisandroid.mystore.views.OpensansTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_xsmall"
            android:text="@string/app_name"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_xmedium"
            app:font_type_opensans="regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_color" />

        <com.godavarisandroid.mystore.views.OpensansTextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_small"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_medium"
            app:font_type_opensans="regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:layout_marginTop="@dimen/space_medium"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:id="@+id/txtYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/corners_solid_app"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/space_vsmall"
                    android:paddingLeft="@dimen/space_medium"
                    android:paddingRight="@dimen/space_medium"
                    android:paddingTop="@dimen/space_vsmall"
                    android:singleLine="true"
                    android:text="YES"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium"
                    app:font_type_opensans="regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:id="@+id/txtNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@drawable/corners_solid_app"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/space_vsmall"
                    android:paddingLeft="@dimen/space_medium"
                    android:paddingRight="@dimen/space_medium"
                    android:paddingTop="@dimen/space_vsmall"
                    android:singleLine="true"
                    android:text="NO"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium"
                    app:font_type_opensans="regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>