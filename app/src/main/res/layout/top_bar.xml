<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_delivery_size"
    android:layout_alignParentTop="true"
    android:background="@color/app_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_delivery_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/space_small"
            android:scaleType="fitXY"
            android:src="@drawable/milkcart_logo" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/space_xxxlarge"
            android:layout_height="@dimen/space_xxxlarge"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/space_small"
            android:src="@drawable/img_back"
            android:visibility="gone" />
    </LinearLayout>

    <com.godavarisandroid.mystore.views.OpensansTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgNotification"
        android:layout_toRightOf="@+id/llLeft"
        android:inputType="textMultiLine|textImeMultiLine|textAutoCorrect"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_xlarge"
        android:visibility="gone"
        app:font_type_opensans="bold" />

    <ImageView
        android:id="@+id/imgNotification"
        android:layout_width="@dimen/space_5xlarge"
        android:layout_height="@dimen/space_5xlarge"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgHelp"
        android:padding="@dimen/twelve_dp"
        android:src="@drawable/img_notification"
        android:visibility="visible" />

    <ImageView
            android:id="@+id/imgHelp"
        android:layout_width="@dimen/space_5xlarge"
        android:layout_height="@dimen/space_5xlarge"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/space_small"
        android:src="@drawable/img_help"
        android:visibility="visible" />

</RelativeLayout>