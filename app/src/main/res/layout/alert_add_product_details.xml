<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_5xlarge"
        android:background="@drawable/border_corner_white"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_vsmall"
                android:background="@drawable/border_lite_white"
                android:orientation="vertical"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_vsmall"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="@dimen/space_6xlarge"
                        android:layout_height="@dimen/space_6xlarge"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_vsmall"
                        android:layout_toLeftOf="@+id/llRight"
                        android:layout_toRightOf="@+id/imgProduct"
                        android:orientation="vertical">

                        <com.godavarisandroid.mystore.views.OpensansTextView
                            android:id="@+id/txtProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="Product"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/text_medium"
                            app:font_type_opensans="regular" />

                        <com.godavarisandroid.mystore.views.OpensansTextView
                            android:id="@+id/txtSubCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="Sub Category"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/text_medium"
                            app:font_type_opensans="regular" />

                        <com.godavarisandroid.mystore.views.OpensansTextView
                            android:id="@+id/txtQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="Quantity"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/text_medium"
                            app:font_type_opensans="regular" />

                        <com.godavarisandroid.mystore.views.OpensansTextView
                            android:id="@+id/txtPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="Price"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/text_medium"
                            app:font_type_opensans="regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/space_small"
                            android:src="@drawable/img_delete" />

                        <com.godavarisandroid.mystore.views.OpensansTextView
                            android:id="@+id/txtActivate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/lite_corners_app_solid_app"
                            android:ems="4"
                            android:gravity="center"
                            android:padding="@dimen/space_vsmall"
                            android:text="Activate"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/text_small"
                            app:font_type_opensans="regular" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_lite_white" />

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_vsmall"
                    android:text="Product Description"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_xmedium"
                    app:font_type_opensans="regular" />

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_vsmall"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_xsmall"
                    app:font_type_opensans="regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:orientation="vertical"
                android:padding="2dp">

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_vsmall"
                    android:text="Schedule the delivery"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_xmedium"
                    app:font_type_opensans="regular" />

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:id="@+id/selectQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_xxlarge"
                    android:layout_marginTop="@dimen/space_xmedium"
                    android:text="Select the Quantity"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_xsmall"
                    app:font_type_opensans="regular" />

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:id="@+id/txtSelectQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_vsmall"
                    android:drawableLeft="@drawable/img_cart"
                    android:drawablePadding="@dimen/space_vsmall"
                    android:drawableRight="@drawable/img_drop"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/space_small"
                    android:text="1"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_medium"
                    app:font_type_opensans="regular" />

                <View
                    android:id="@+id/viewSelectQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_color" />
            </LinearLayout>

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:id="@+id/txtSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_small"
                android:layout_marginTop="@dimen/space_medium"
                android:background="@drawable/corners_app_solid_app"
                android:ems="6"
                android:gravity="center"
                android:padding="@dimen/space_small"
                android:text="Add Product"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>