<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/space_large"
        android:layout_height="@dimen/space_large"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/space_small"
        android:src="@drawable/img_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_5xlarge"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_xmedium"
            android:layout_marginRight="@dimen/space_xmedium"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/me_doll_height_reg"
                android:layout_gravity="center"
                android:src="@drawable/img_doll_splash" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_vsmall"
                android:src="@drawable/milkcart_logo"
                android:visibility="visible" />

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_xxxlarge"
                android:layout_marginTop="@dimen/space_xxxlarge"
                android:text="Name"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium"
                app:font_type_opensans="regular" />

            <com.godavarisandroid.mystore.views.OpensansEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@null"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/img_name"
                android:drawablePadding="@dimen/space_small"
                android:inputType="text|textNoSuggestions"
                android:maxLength="200"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@color/color_white" />

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_xxxlarge"
                android:layout_marginTop="@dimen/space_small"
                android:text="Email ID"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium"
                app:font_type_opensans="regular" />

            <com.godavarisandroid.mystore.views.OpensansEditText
                android:id="@+id/edtEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@null"
                android:drawableLeft="@drawable/img_mail"
                android:drawablePadding="@dimen/space_small"
                android:inputType="textEmailAddress"
                android:maxLength="200"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@color/color_white" />

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_xxxlarge"
                android:layout_marginTop="@dimen/space_small"
                android:text="City"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium"
                app:font_type_opensans="regular" />

            <com.godavarisandroid.mystore.views.OpensansEditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@null"
                android:drawableLeft="@drawable/img_city"
                android:drawablePadding="@dimen/space_small"
                android:editable="false"
                android:focusable="false"
                android:inputType="textCapWords"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@color/color_white" />

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_xxxlarge"
                android:layout_marginTop="@dimen/space_small"
                android:text="Area"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium"
                app:font_type_opensans="regular" />

            <com.godavarisandroid.mystore.views.OpensansEditText
                android:id="@+id/edtArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@null"
                android:drawableLeft="@drawable/img_area"
                android:drawablePadding="@dimen/space_small"
                android:editable="false"
                android:focusable="false"
                android:inputType="textCapWords"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_vsmall"
                android:background="@color/color_white" />

            <LinearLayout
                android:id="@+id/linReferalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.godavarisandroid.mystore.views.OpensansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_xxxlarge"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="Referal Code"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium"
                    app:font_type_opensans="regular" />

                <com.godavarisandroid.mystore.views.OpensansEditText
                    android:id="@+id/edtReferalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_vsmall"
                    android:background="@null"
                    android:drawableLeft="@drawable/img_area"
                    android:drawablePadding="@dimen/space_small"
                    android:inputType="textCapWords"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/color_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_xmedium"
                    app:font_type_opensans="regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_vsmall"
                    android:background="@color/color_white" />

            </LinearLayout>

            <com.godavarisandroid.mystore.views.OpensansTextView
                android:id="@+id/txtGetSetGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_xmedium"
                android:layout_marginBottom="@dimen/space_small"
                android:background="@drawable/corners_white_solid_white"
                android:ems="6"
                android:gravity="center"
                android:padding="@dimen/space_xsmall"
                android:text="Get Set Go"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_xmedium"
                app:font_type_opensans="regular" />

            <TextView
                android:id="@+id/txtTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xmedium"
                android:layout_marginBottom="@dimen/space_xmedium"
                android:gravity="center"
                android:text="By submitting the information, you agree with our Terms and Conditions"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_xsmall" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>